# ============================================
# SAGE Registry V2 - Environment Variables
# ============================================
# Copy this file to .env and update with your values
# NEVER commit .env file to version control!

# ============================================
# NETWORK CONFIGURATION
# ============================================

# Private Keys (without 0x prefix)
# For development/testing
PRIVATE_KEY=your_private_key_here_without_0x

# For production deployment (keep separate from test key)
MAINNET_PRIVATE_KEY=your_mainnet_private_key_here

# Network RPC URLs (optional - defaults will be used if not set)
LOCALHOST_RPC_URL=http://127.0.0.1:8545
KAIROS_RPC_URL=https://public-en-kairos.node.kaia.io
KAIA_RPC_URL=https://public-en.node.kaia.io

# Gas Configuration (optional)
GAS_PRICE_GWEI=250
GAS_LIMIT=3000000

# ============================================
# SAGE PLATFORM CONFIGURATION
# ============================================

# Blockchain platform identifier
# Options: kaia, ethereum, polygon
SAGE_CHAIN=kaia

# Network environment
# Options: mainnet, testnet, local
SAGE_NETWORK=testnet

# Chain ID (automatic based on network selection)
# 31337 = Local, 1001 = Kairos, 8217 = Kaia/Cypress, 11155111 = Sepolia
SAGE_CHAIN_ID=1001

# Network name for display/logging
# Options: localhost, kairos, cypress, kaia, sepolia
SAGE_NETWORK_NAME=kairos

# ============================================
# CONTRACT ADDRESSES
# ============================================
# Update these after deployment

SAGE_REGISTRY_ADDRESS=
SAGE_VERIFICATION_HOOK_ADDRESS=

# ============================================
# PRODUCTION AGENTS CONFIGURATION
# ============================================

# Root Agent
ROOT_AGENT_ENDPOINT=https://root.sage.ai
ROOT_AGENT_KEY_ENDPOINT=https://root.sage.ai/public-key
ROOT_AGENT_DID=did:sage:root

# Ordering Agent
ORDERING_AGENT_ENDPOINT=https://ordering.sage.ai
ORDERING_AGENT_KEY_ENDPOINT=https://ordering.sage.ai/public-key
ORDERING_AGENT_DID=did:sage:ordering

# Planning Agent
PLANNING_AGENT_ENDPOINT=https://planning.sage.ai
PLANNING_AGENT_KEY_ENDPOINT=https://planning.sage.ai/public-key
PLANNING_AGENT_DID=did:sage:planning

# ============================================
# BLOCK EXPLORER VERIFICATION
# ============================================

# Kaia explorers (usually don't require API keys)
KAIROS_API_KEY=unnecessary
KAIA_API_KEY=unnecessary

# For Ethereum networks (if using Sepolia)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ============================================
# SEPOLIA TESTNET CONFIGURATION
# ============================================
# For ERC-8004 deployment and testing

SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
SEPOLIA_PRIVATE_KEY=your_sepolia_test_private_key

# ============================================
# DEVELOPMENT & TESTING
# ============================================

# Test configuration
TEST_TIMEOUT=60000
TEST_REPORTER=spec

# Gas reporting
REPORT_GAS=false
GAS_REPORT_FILE=gas-report.txt
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Optimizer settings
OPTIMIZER_RUNS=200

# Compiler settings
# VIA_IR: Enable IR-based compilation (helps with stack too deep errors)
# WARNING: viaIR can cause Etherscan/block explorer verification issues
# Only enable if you have stack depth problems and don't need verification
VIA_IR=false

# Sourcify verification
SOURCIFY_ENABLED=true

# ============================================
# SECURITY NOTES
# ============================================
# 1. NEVER commit this file with real values to git
# 2. Use different private keys for mainnet and testnet
# 3. Keep mainnet private keys in secure storage
# 4. Rotate keys regularly
# 5. Use hardware wallets for production deployments
# ============================================
