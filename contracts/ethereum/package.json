{
  "name": "sage-contracts",
  "version": "1.0.0",
  "description": "SAGE Registry Smart Contracts for Kaia Network",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "test": "hardhat test",
    "test:v1": "hardhat test test/SageRegistry.test.fixed.js",
    "test:v2": "hardhat test test/SageRegistryV2.test.js",
    "test:integration": "hardhat test test/integration-v2.test.js",
    "test:kairos": "hardhat test --network kairos",
    "deploy:local": "hardhat run scripts/deploy-v2.js --network localhost",
    "deploy:kairos": "hardhat run scripts/deploy-v2.js --network kairos",
    "deploy:kaia": "hardhat run scripts/deploy-v2.js --network cypress",
    "verify:kairos": "hardhat run scripts/verify-contracts.js --network kairos",
    "verify:kaia": "hardhat run scripts/verify-contracts.js --network kaia",
    "verify:cypress": "hardhat run scripts/verify-contracts.js --network cypress",
    "flatten": "./scripts/flatten-contracts.sh",
    "node": "hardhat node",
    "node:stop": "lsof -ti:8545 | xargs kill -9 2>/dev/null || echo 'No node running on port 8545'",
    "node:restart": "npm run node:stop && npm run node",
    "node:status": "lsof -i:8545 2>/dev/null || echo 'No node running on port 8545'",
    "console": "hardhat console",
    "console:kairos": "hardhat console --network kairos",
    "coverage": "hardhat coverage",
    "size": "hardhat size-contracts",
    "quick-test": "hardhat run scripts/quick-test.js",
    "check-balance": "hardhat run scripts/check-balance.js",
    "setup": "./bin/quick-start.sh",
    "extract-abi": "node scripts/extract-abi.js",
    "generate:go": "node scripts/generate-go-bindings.js",
    "generate:java": "node scripts/generate-java-bindings.js",
    "generate:python": "node scripts/generate-python-bindings.js",
    "generate:rust": "node scripts/generate-rust-bindings.js",
    "generate:all": "npm run extract-abi && npm run generate:go && npm run generate:java && npm run generate:python && npm run generate:rust"
  },
  "keywords": [
    "sage",
    "kaia",
    "klaytn",
    "blockchain",
    "smart-contracts",
    "did",
    "ai-agents"
  ],
  "author": "SAGE Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.0.0",
    "@typechain/ethers-v6": "^0.4.0",
    "@typechain/hardhat": "^8.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=16.0.0",
    "chai": "^4.2.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.4.0",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.0",
    "typechain": "^8.3.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3"
  }
}
