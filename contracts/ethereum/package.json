{
  "name": "sage-contracts",
  "version": "1.3.1",
  "description": "SAGE Registry Smart Contracts for Kaia Network",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "clean": "hardhat clean && npm run clean:generated",
    "clean:generated": "rm -rf typechain-types coverage coverage.json .nyc_output test-results gas-report.txt *.log logs dist build out tmp temp && find . -name '*.tmp' -o -name '*.temp' -o -name '*.bak' -o -name '*.backup' -o -name '*.old' | grep -v node_modules | xargs rm -f 2>/dev/null || true",
    "clean:deployments": "find deployments -name '*.json' ! -name 'example.json' ! -name '*-latest.json' -delete 2>/dev/null || true",
    "clean:all": "npm run clean && npm run clean:deployments",
    "clean:deep": "npm run clean:all && rm -rf node_modules",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "test": "hardhat test",
    "test:kairos": "hardhat test --network kairos",
    "flatten": "./scripts/flatten-contracts.sh",
    "node": "hardhat node",
    "node:stop": "./scripts/port-manager.sh clean --hardhat",
    "node:restart": "npm run node:stop && npm run node",
    "node:status": "./scripts/port-manager.sh status",
    "port:clean": "./scripts/port-manager.sh clean --all",
    "port:check": "./scripts/port-manager.sh check",
    "console": "hardhat console",
    "console:kairos": "hardhat console --network kairos",
    "coverage": "COVERAGE=true hardhat coverage",
    "size": "hardhat size-contracts",
    "check-balance": "hardhat run scripts/check-balance.js"
  },
  "keywords": [
    "sage",
    "kaia",
    "klaytn",
    "blockchain",
    "smart-contracts",
    "did",
    "ai-agents"
  ],
  "author": "SAGE Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.0.0",
    "@typechain/ethers-v6": "^0.4.0",
    "@typechain/hardhat": "^8.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=16.0.0",
    "chai": "^4.2.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.4.0",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.8.0",
    "prettier-plugin-solidity": "^1.1.0",
    "solhint": "^3.6.2",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.0",
    "typechain": "^8.3.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3"
  },
  "overrides": {
    "tmp": "^0.2.4",
    "cookie": "^0.7.0"
  }
}
