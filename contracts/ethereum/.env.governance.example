# SAGE Governance Configuration
# Copy this to .env and fill in the values

# ===================================
# Multi-sig Signer Addresses
# ===================================
# IMPORTANT: These addresses will control all SAGE contracts
# Require hardware wallet signatures in production

# Signer 1 (e.g., Project Lead)
SIGNER1_ADDRESS=0x1234567890123456789012345678901234567890

# Signer 2 (e.g., Technical Lead)
SIGNER2_ADDRESS=0x2234567890123456789012345678901234567890

# Signer 3 (e.g., Security Lead)
SIGNER3_ADDRESS=0x3234567890123456789012345678901234567890

# Signer 4 (e.g., Community Representative)
SIGNER4_ADDRESS=0x4234567890123456789012345678901234567890

# Signer 5 (e.g., Legal/Compliance)
SIGNER5_ADDRESS=0x5234567890123456789012345678901234567890

# ===================================
# Governance Contract Addresses
# ===================================
# These will be populated after deployment

# Multi-sig wallet address
MULTISIG_ADDRESS=

# Timelock controller address
TIMELOCK_ADDRESS=

# ===================================
# SAGE Contract Addresses
# ===================================
# Main SAGE contracts (to be transferred to Timelock)

SAGE_REGISTRY_ADDRESS=
IDENTITY_REGISTRY_ADDRESS=
REPUTATION_REGISTRY_ADDRESS=
VALIDATION_REGISTRY_ADDRESS=

# ===================================
# Network Configuration
# ===================================

# Sepolia Testnet
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
SEPOLIA_PRIVATE_KEY=your_deployer_private_key_here
ETHERSCAN_API_KEY=your_etherscan_api_key

# Mainnet (when ready)
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
MAINNET_PRIVATE_KEY=your_mainnet_deployer_key_DO_NOT_COMMIT

# ===================================
# Emergency Contact Information
# ===================================

# Signer 1 Contact
SIGNER1_NAME="John Doe"
SIGNER1_EMAIL="john@example.com"
SIGNER1_TELEGRAM="@johndoe"

# Signer 2 Contact
SIGNER2_NAME="Jane Smith"
SIGNER2_EMAIL="jane@example.com"
SIGNER2_TELEGRAM="@janesmith"

# Signer 3 Contact
SIGNER3_NAME="Bob Wilson"
SIGNER3_EMAIL="bob@example.com"
SIGNER3_TELEGRAM="@bobwilson"

# Signer 4 Contact
SIGNER4_NAME="Alice Johnson"
SIGNER4_EMAIL="alice@example.com"
SIGNER4_TELEGRAM="@alicejohnson"

# Signer 5 Contact
SIGNER5_NAME="Charlie Brown"
SIGNER5_EMAIL="charlie@example.com"
SIGNER5_TELEGRAM="@charliebrown"

# ===================================
# Security Settings
# ===================================

# Require 2FA for critical operations
REQUIRE_2FA=true

# Hardware wallet requirement
REQUIRE_HARDWARE_WALLET=true

# Geographic distribution requirement
REQUIRE_GEO_DISTRIBUTION=true

# ===================================
# Monitoring & Alerts
# ===================================

# Telegram bot token for alerts
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Email alerts
ALERT_EMAIL=security@sage-project.io

# PagerDuty integration
PAGERDUTY_API_KEY=your_pagerduty_key
PAGERDUTY_SERVICE_ID=your_service_id

# ===================================
# Notes
# ===================================

# CRITICAL SECURITY WARNINGS:
# 1. NEVER commit this file with real private keys
# 2. Use hardware wallets for all signers in production
# 3. Store backups securely (encrypted, multiple locations)
# 4. Test everything on testnet first
# 5. Have emergency procedures documented
# 6. Verify all addresses before mainnet deployment
# 7. Keep signer contact info updated
# 8. Regular security audits of governance process
