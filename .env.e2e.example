# SAGE E2E Test Environment Configuration
# Copy this file to .env.e2e and fill in your values

#####################################
# Ethereum Sepolia Testnet
#####################################
SEPOLIA_RPC_URL=https://rpc.sepolia.org
# Alternative public RPCs:
# SEPOLIA_RPC_URL=https://ethereum-sepolia.publicnode.com
# SEPOLIA_RPC_URL=https://rpc2.sepolia.org

# Your Sepolia private key (NEVER commit real keys!)
# Get test ETH from: https://sepoliafaucet.com/
SEPOLIA_PRIVATE_KEY=your_private_key_here

# Deployed SAGE Registry contract on Sepolia
SAGE_REGISTRY_ADDRESS=0xb25D5f59cA52532862dA92901a2A550A09d5b4c0

# Chain ID for Sepolia
SEPOLIA_CHAIN_ID=11155111

#####################################
# Solana Devnet (Optional)
#####################################
SOLANA_DEVNET_RPC_URL=https://api.devnet.solana.com

# Your Solana devnet private key (base58 encoded)
# Get test SOL from: https://solfaucet.com/
SOLANA_DEVNET_PRIVATE_KEY=your_solana_private_key_here

# Deployed SAGE program on Solana Devnet (if available)
SOLANA_PROGRAM_ID=your_program_id_here

#####################################
# Test Configuration
#####################################

# Timeout for blockchain transactions (seconds)
TRANSACTION_TIMEOUT=60

# Number of confirmations to wait
CONFIRMATION_BLOCKS=2

# Gas price (in Gwei) for Ethereum transactions
GAS_PRICE=20

# Max retries for failed transactions
MAX_RETRIES=3

#####################################
# E2E Test Scenarios
#####################################

# Skip tests that require real blockchain (true/false)
SKIP_BLOCKCHAIN_TESTS=false

# Skip tests that cost gas
SKIP_GAS_TESTS=false

# Run only smoke tests (fast validation)
SMOKE_TEST_ONLY=false

#####################################
# Logging
#####################################

# Log level for E2E tests (debug, info, warn, error)
E2E_LOG_LEVEL=info

# Save test logs to file
E2E_LOG_FILE=./reports/e2e-test.log

#####################################
# Advanced Options
#####################################

# Use local blockchain instead of testnet
USE_LOCAL_BLOCKCHAIN=false

# Local blockchain RPC (if USE_LOCAL_BLOCKCHAIN=true)
LOCAL_RPC_URL=http://localhost:8545

# Test data directory
TEST_DATA_DIR=./test-data

# Cleanup test data after tests
CLEANUP_TEST_DATA=true
