{
  "name": "@sage-x/sdk",
  "version": "1.0.0",
  "description": "TypeScript/JavaScript SDK for SAGE (Secure Agent Guarantee Engine)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "sage",
    "security",
    "agent",
    "mcp",
    "did",
    "encryption",
    "signature",
    "blockchain",
    "web3"
  ],
  "author": "SAGE Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sage-x-project/sage.git",
    "directory": "sdk/typescript"
  },
  "bugs": {
    "url": "https://github.com/sage-x-project/sage/issues"
  },
  "homepage": "https://github.com/sage-x-project/sage/tree/main/sdk/typescript#readme",
  "dependencies": {
    "@noble/ed25519": "^2.1.0",
    "@noble/secp256k1": "^2.1.0",
    "@noble/curves": "^1.4.0",
    "@noble/hashes": "^1.4.0",
    "ethers": "^6.13.0",
    "jose": "^5.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
